---
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"
import FeatherJS from "./icons/Featherjs.astro"
import Mui from "./icons/Mui.astro"
import Ant from "./icons/Ant.astro"
import Styled from "./icons/Styled.astro"
import Meilisearch from "./icons/Meilisearch.astro"
import Javascript from "./icons/Javascript.astro"
import ReactIcon from "./icons/React.astro"
import ReactNative from "./icons/ReactNative.astro"
import TypeScript from "./icons/TypeScript.astro"

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-black text-white",
    icon: Tailwind,
  },
  FEATHERJS: {
    name: "FeatherJS",
    class: "bg-black text-white",
    icon: FeatherJS,
  },
  ANT_DESIGN: {
    name: "ANT DESIGN",
      class: "bg-black text-white",
    icon: Ant,
  },
  MUI: {
    name: "MUI",
    class: "bg-black text-white",
    icon: Mui,
  },
  STYLED: {
    name: "Styled Components",
    class: "bg-black text-white",
    icon: Styled,
  },
  MEILISEARCH: {
    name: "Meilisearch",
    class: "bg-black text-white",
    icon: Meilisearch,
  },
  JAVASCRIPT: {
    name: "Javascript",
    class: "bg-black text-white",
    icon: Javascript,
  },
  REACT: {
    name: "React",
    class: "bg-black text-white",
    icon: ReactIcon,
  },
  REACT_NATIVE: {
    name: "React Native",
    class: "bg-black text-white",
    icon: ReactNative,
  },
  TYPESCRIPT: {
    name: "TypeScript",
    class: "bg-black text-white",
    icon: TypeScript,
  },
}
const PROJECTS = [
  {
    "title": "Profezac",
    "description": "Panel administrativo para una app de aprendizaje de idiomas estilo Duolingo, con características de gamificación y tableros de liderazgo para incentivar el progreso de los usuarios.",
    "image": "/portfolio/projects/profezac.webp",
    "tags": [TAGS.NEXT, TAGS.TAILWIND, TAGS.FEATHERJS]
  },
  {
    "title": "Achieve Apex",
    "description": "CRM con inteligencia artificial que automatiza conversaciones de WhatsApp, Instagram, Facebook y Email 24/7. Convierte conversaciones en oportunidades de venta, gestiona leads y optimiza el flujo de trabajo con IA personalizada.",
    "image": "/portfolio/projects/achieveapex.webp",
    "tags": [TAGS.NEXT, TAGS.FEATHERJS],
    "link": "https://www.achieveapex.com/"
  },
  {
    "title": "Bicosa",
    "description": "Software para la gestión de producción en manufacturas de prendas de vestir, optimizando procesos operativos e integrando control de inventarios.",
    "image": "/portfolio/projects/bicosa.webp",
    "tags": [TAGS.NEXT, TAGS.TAILWIND, TAGS.FEATHERJS],
  },
  {
  "title": "Cámara de Comercio de Barranquilla",  
  "description": "Organización sin fines de lucro que apoya el desarrollo empresarial en Barranquilla, facilitando servicios de formalización y capacitación para empresas y emprendedores.",
  "link": "https://www.camarabaq.org.co",
  "image": "/portfolio/projects/camara-de-comercio.webp",
  "tags": [TAGS.NEXT, TAGS.FEATHERJS, TAGS.MUI, TAGS.STYLED]
  },
  {
    "title": "Yoyoso",
    "description": "Tienda en línea de productos de variedad. Desarrollada con Next.js y Ant Design para ofrecer una experiencia moderna y eficiente.",
    "link": "https://www.yoyoso.com.co",
    "image": "/portfolio/projects/yoyoso.webp",
    "tags": [TAGS.NEXT, TAGS.FEATHERJS, TAGS.ANT_DESIGN, TAGS.STYLED],
  },
  {
    "title": "Almacen Sandra",
    "description": "Tienda de productos de belleza y estética en Colombia. Ofrece maquillaje, cuidado de la piel y artículos para peluquerías.",
    "link": "https://almacensandra.com.co",
    "image": "/portfolio/projects/sandra.webp",
    "tags": [TAGS.NEXT, TAGS.FEATHERJS, TAGS.ANT_DESIGN, TAGS.STYLED],
  },
  {
    "title": "Ultimate aviation solutions",
    "description": "Catálogo web de piezas de avión con presupuestos personalizados y panel de administración interno.",
    "link": "https://www.myuas.aero",
    "image": "/portfolio/projects/myuas.webp",
    "tags": [TAGS.NEXT, TAGS.FEATHERJS, TAGS.TAILWIND],
  },
  {
    "title": "Achieve Apex App",
    "description": "Aplicación móvil complementaria del CRM con IA. Gestiona conversaciones y leads desde tu dispositivo móvil con notificaciones instantáneas y sincronización automática con la plataforma web.",
    "image": "/portfolio/projects/apps/achieveapex.webp",
    "tags": [TAGS.REACT_NATIVE, TAGS.TYPESCRIPT],
    "link": "https://apps.apple.com/co/app/achieveapex/id6741082332"
  },
  {
    "title": "Carnes Santa Cruz",
    "description": "App de tienda distribuidora de carnes premium y tradicionales. Permite compra de productos con descripciones detalladas, más de 1000 recetas para convertirte en el mejor chef, y las mejores promociones de la ciudad.",
    "image": "/portfolio/projects/apps/carnes-santacruz.webp",
    "tags": [TAGS.REACT_NATIVE, TAGS.TYPESCRIPT],
    "link": "https://apps.apple.com/us/app/carnes-santacruz/id1672165736"
  },
  {
    "title": "Sushi2Go",
    "description": "App de restaurante de sushi que permite realizar pedidos, tracking de pedido en tiempo real y customización de productos. Incluye menú variado con imágenes atractivas, múltiples opciones de pago y sistema de recompensas para clientes frecuentes.",
    "image": "/portfolio/projects/apps/sushi2go.webp",
    "tags": [TAGS.REACT_NATIVE, TAGS.TYPESCRIPT],
    "link": "https://apps.apple.com/co/app/sushi2go/id6741158570"
  },
  {
    "title": "Profezac App",
    "description": "Desarrollo de una app de aprendizaje de idiomas estilo Duolingo, con características de gamificación y tableros de liderazgo para incentivar el progreso de los usuarios.",
    "image": "/portfolio/projects/apps/profezac.webp",
    "tags": [TAGS.REACT_NATIVE, TAGS.TYPESCRIPT],
    "link": "https://apps.apple.com/us/app/profezac-english/id6470171032"
  }
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt={title} class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                {tag?.icon && <tag.icon class="size-4" />}
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {link && (
            <LinkButton href={link} target="_blank">
              <Link class="size-4" />
              {title === "Profezac App" ? "App Store" : title === "Achieve Apex App" ? "App Store" : title === "Sushi2Go" ? "App Store" : title === "Carnes Santa Cruz" ? "App Store" : "Preview"}
            </LinkButton>
          )}
          {(title === "Profezac App" || title === "Sushi2Go" || title === "Carnes Santa Cruz") && (
            <LinkButton href={title === "Profezac App" ? "https://play.google.com/store/apps/details?id=com.profezacenglish.app&pli=1" : title === "Sushi2Go" ? "https://play.google.com/store/apps/details?id=com.sushi2goapp&hl=es_CR" : "https://play.google.com/store/apps/details?id=com.deliverycarnessantacruz&hl=es_CR"} target="_blank">
              <Link class="size-4" />
              Google Play
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>



